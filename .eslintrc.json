{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "script"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off"
    },
    "globals": {
        "BoardCaller": false,
        "BoardPledge": false,
        "Board": false,
        "TYPE_PL": false,
        "TYPE_CC": false,
        "TYPE_GR": false,
        "comparePledgeAmount": false,
        "comparePledgeOrder": false,
        "Tabletop": false
    }
}
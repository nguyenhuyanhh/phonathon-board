{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-console": "off"
  },
  "globals": {
    "BoardCaller": false,
    "BoardPledge": false,
    "Board": false,
    "SheetCaller": false,
    "SheetShift": false,
    "Sheet": false,
    "TYPE_PL": false,
    "TYPE_CC": false,
    "TYPE_GR": false,
    "comparePledgeAmount": false,
    "comparePledgeOrder": false,
    "Tabletop": false
  }
}
